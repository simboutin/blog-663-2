<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<% if @article.photos.attached? %>
  <% @article.photos.each do |photo| %>
    <%= cl_image_tag photo.key, width: 300 %>
  <% end %>
<% end %>


<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', root_path %>
